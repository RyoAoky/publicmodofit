<h2 class="fw-bold mb-4">Mis Pedidos</h2>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-bag me-2"></i>Historial de Pedidos</h5>
        <a href="/pedidos" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-1"></i>Nuevo Pedido
        </a>
    </div>
    <div class="card-body p-0">
        {{#if pedidos.length}}
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>N° Pedido</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Método de Pago</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each pedidos}}
                    <tr>
                        <td><strong>#{{this.idped}}</strong></td>
                        <td>{{formatDate this.fecped}}</td>
                        <td>{{formatCurrency this.totped}}</td>
                        <td>{{this.metpagped}}</td>
                        <td>
                            {{#ifCond this.estped '==' 'P'}}
                            <span class="badge bg-warning">Pendiente</span>
                            {{/ifCond}}
                            {{#ifCond this.estped '==' 'C'}}
                            <span class="badge bg-success">Completado</span>
                            {{/ifCond}}
                            {{#ifCond this.estped '==' 'X'}}
                            <span class="badge bg-danger">Cancelado</span>
                            {{/ifCond}}
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary" onclick="verDetalle({{this.idped}})">
                                <i class="bi bi-eye"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center py-5">
            <i class="bi bi-bag-x fs-1 text-muted"></i>
            <p class="mt-3 text-muted">No tienes pedidos registrados</p>
            <a href="/pedidos" class="btn btn-primary">
                <i class="bi bi-cart-plus me-2"></i>Realizar tu primer pedido
            </a>
        </div>
        {{/if}}
    </div>
</div>

<script>
function verDetalle(idPedido) {
    Swal.fire({
        title: 'Detalle del Pedido #' + idPedido,
        text: 'Cargando información...',
        icon: 'info'
    });
}
</script>
