<h2 class="fw-bold mb-4">Mis Membresías</h2>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-card-checklist me-2"></i>Historial de Membresías</h5>
        <a href="/" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-1"></i>Nueva Membresía
        </a>
    </div>
    <div class="card-body p-0" id="membresias-container">
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    </div>
</div>

<script>
async function cargarMembresias() {
    const container = document.getElementById('membresias-container');
    try {
        const response = await fetch('/dashboard/api/membresias');
        const data = await response.json();
        
        if (data.success && data.data.length > 0) {
            container.innerHTML = `
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tipo</th>
                                <th>Fecha Inicio</th>
                                <th>Fecha Fin</th>
                                <th>Estado</th>
                                <th>Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${data.data.map(m => `
                                <tr>
                                    <td><strong>${m.tipomem}</strong></td>
                                    <td>${formatearFecha(m.fecinimem)}</td>
                                    <td>${formatearFecha(m.fecfinmem)}</td>
                                    <td>${getEstadoMembresia(m.estmem, m.estmem_cod)}</td>
                                    <td>S/ ${parseFloat(m.premem).toFixed(2)}</td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
            `;
        } else {
            container.innerHTML = `
                <div class="text-center py-5">
                    <i class="bi bi-card-list fs-1 text-muted"></i>
                    <p class="mt-3 text-muted">No tienes membresías registradas</p>
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-cart-plus me-2"></i>Comprar tu primera membresía
                    </a>
                </div>
            `;
        }
    } catch (error) {
        console.error('Error al cargar membresías:', error);
        container.innerHTML = '<div class="text-center py-5 text-muted">Error al cargar datos</div>';
    }
}

function getEstadoMembresia(descripcion, codigo) {
    let color = 'secondary';
    // Usamos el código para determinar el color, si está disponible
    if (codigo) {
        switch(codigo) {
            case 'S':
            case 'A': color = 'success'; break;
            case 'V': color = 'danger'; break;
            case 'C': color = 'secondary'; break;
            case 'P': color = 'warning text-dark'; break;
        }
    } else {
        // Fallback básico basado en texto si no hay código (opcional)
        const descUpper = (descripcion || '').toUpperCase();
        if (descUpper.includes('ACTIVA')) color = 'success';
        else if (descUpper.includes('VENCIDA')) color = 'danger';
        else if (descUpper.includes('PENDIENTE')) color = 'warning text-dark';
    }
    
    return `<span class="badge bg-${color}">${descripcion || '-'}</span>`;
}

function formatearFecha(fecha) {
    if (!fecha) return '-';
    return new Date(fecha).toLocaleDateString('es-PE');
}

document.addEventListener('DOMContentLoaded', cargarMembresias);
</script>
