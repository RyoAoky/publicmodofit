<h2 class="fw-bold mb-4">Mi Dashboard</h2>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-primary text-light">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 opacity-75">Membresía Actual</h6>
                        <h4 class="mb-0 fw-bold">
                            {{#if membresia}}
                            {{membresia.tipomem}}
                            {{else}}
                            Sin membresía
                            {{/if}}
                        </h4>
                    </div>
                    <i class="bi bi-card-checklist fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-success text-light">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 opacity-75">Vencimiento</h6>
                        <h4 class="mb-0 fw-bold">
                            {{#if membresia}}
                            {{formatDate membresia.fecfinmem}}
                            {{else}}
                            -
                            {{/if}}
                        </h4>
                    </div>
                    <i class="bi bi-calendar-check fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-0 shadow-sm bg-warning text-dark">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0 opacity-75">Pedidos Totales</h6>
                        <h4 class="mb-0 fw-bold">{{pedidos.length}}</h4>
                    </div>
                    <i class="bi bi-bag fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Recent Orders -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-bag me-2"></i>Últimos Pedidos</h5>
                    <a href="/dashboard/pedidos" class="text-decoration-none">Ver todos</a>
                </div>
            </div>
            <div class="card-body p-0">
                {{#if pedidos.length}}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each pedidos}}
                            <tr>
                                <td>#{{this.idped}}</td>
                                <td>{{formatDate this.fecped}}</td>
                                <td>{{formatCurrency this.totped}}</td>
                                <td>
                                    {{#ifCond this.estped '==' 'P'}}
                                    <span class="badge bg-warning">Pendiente</span>
                                    {{/ifCond}}
                                    {{#ifCond this.estped '==' 'C'}}
                                    <span class="badge bg-success">Completado</span>
                                    {{/ifCond}}
                                    {{#ifCond this.estped '==' 'X'}}
                                    <span class="badge bg-danger">Cancelado</span>
                                    {{/ifCond}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                {{else}}
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-bag-x fs-1"></i>
                    <p class="mt-2">No tienes pedidos aún</p>
                    <a href="/pedidos" class="btn btn-primary">Realizar primer pedido</a>
                </div>
                {{/if}}
            </div>
        </div>
    </div>

    <!-- Reservations -->
    <div class="col-lg-6">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 py-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold"><i class="bi bi-calendar-event me-2"></i>Próximas Reservas</h5>
                </div>
            </div>
            <div class="card-body">
                {{#if reservas.length}}
                <ul class="list-group list-group-flush">
                    {{#each reservas}}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>{{this.nomres}}</strong>
                            <br><small class="text-muted">{{formatDate this.fecres}}</small>
                        </div>
                        <span class="badge bg-primary">Confirmada</span>
                    </li>
                    {{/each}}
                </ul>
                {{else}}
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-calendar-x fs-1"></i>
                    <p class="mt-2">No tienes reservas activas</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 py-3">
                <h5 class="mb-0 fw-bold"><i class="bi bi-lightning-charge me-2"></i>Acciones Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <a href="/pedidos" class="btn btn-outline-primary w-100 py-3">
                            <i class="bi bi-cart-plus fs-4 d-block mb-2"></i>
                            Comprar Membresía
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/dashboard/perfil" class="btn btn-outline-secondary w-100 py-3">
                            <i class="bi bi-person-gear fs-4 d-block mb-2"></i>
                            Editar Perfil
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/dashboard/membresias" class="btn btn-outline-success w-100 py-3">
                            <i class="bi bi-card-list fs-4 d-block mb-2"></i>
                            Ver Membresías
                        </a>
                    </div>
                    <div class="col-md-3">
                        <a href="/contacto" class="btn btn-outline-info w-100 py-3">
                            <i class="bi bi-headset fs-4 d-block mb-2"></i>
                            Soporte
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
