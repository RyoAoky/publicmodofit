<h2 class="fw-bold mb-4">Mis Pedidos</h2>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 py-3 d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-bag me-2"></i>Historial de Pedidos</h5>
        <a href="/" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-1"></i>Nuevo Pedido
        </a>
    </div>
    <div class="card-body p-0" id="pedidos-container">
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
        </div>
    </div>
</div>

<script>
async function cargarPedidos() {
    const container = document.getElementById('pedidos-container');
    try {
        const response = await fetch('/dashboard/api/pedidos');
        const data = await response.json();
        
        if (data.success && data.data.length > 0) {
            container.innerHTML = `
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>N° Pedido</th>
                                <th>Fecha</th>
                                <th>Total</th>
                                <th>Método de Pago</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            ${data.data.map(p => `
                                <tr>
                                    <td><strong>#${p.idven}</strong></td>
                                    <td>${formatearFecha(p.feccre)}</td>
                                    <td>S/ ${parseFloat(p.totalven).toFixed(2)}</td>
                                    <td>${p.destipopago || p.codtipopago || 'TARJETA'}</td>
                                    <td>${getEstadoPedido(p.estven)}</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" onclick="verDetalle(${p.idven})">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            `).join('')}
                        </tbody>
                    </table>
                </div>
            `;
        } else {
            container.innerHTML = `
                <div class="text-center py-5">
                    <i class="bi bi-bag-x fs-1 text-muted"></i>
                    <p class="mt-3 text-muted">No tienes pedidos registrados</p>
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-cart-plus me-2"></i>Realizar tu primer pedido
                    </a>
                </div>
            `;
        }
    } catch (error) {
        console.error('Error al cargar pedidos:', error);
        container.innerHTML = '<div class="text-center py-5 text-muted">Error al cargar datos</div>';
    }
}

function getEstadoPedido(estado) {
    switch(estado) {
        case 'P': return '<span class="badge bg-warning">Pendiente</span>';
        case 'C': 
        case 'S': return '<span class="badge bg-success">Completado</span>';
        case 'X': return '<span class="badge bg-danger">Cancelado</span>';
        default: return '<span class="badge bg-secondary">-</span>';
    }
}

function formatearFecha(fecha) {
    if (!fecha) return '-';
    return new Date(fecha).toLocaleDateString('es-PE');
}

async function verDetalle(idPedido) {
    try {
        const response = await fetch('/dashboard/api/pedido/' + idPedido);
        const data = await response.json();
        
        if (data.success && data.data.length > 0) {
            const items = data.data.map(d => `<li>${d.nompro} x${d.cantvendet || 1} - S/ ${parseFloat(d.subtotal || 0).toFixed(2)}</li>`).join('');
            Swal.fire({
                title: 'Detalle del Pedido #' + idPedido,
                html: `<ul class="text-start">${items}</ul>`,
                icon: 'info'
            });
        } else {
            Swal.fire('Info', 'No se encontraron detalles del pedido', 'info');
        }
    } catch (error) {
        Swal.fire('Error', 'No se pudo cargar el detalle', 'error');
    }
}

document.addEventListener('DOMContentLoaded', cargarPedidos);
</script>
