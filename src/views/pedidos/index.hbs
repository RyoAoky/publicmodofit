<section class="section-shop">
    <div class="container">
        <!-- Tabs -->
        <ul class="nav-pills-tabs" id="shopTabs" role="tablist">
            <li role="presentation">
                <button class="nav-link active" id="membresias-tab" data-bs-toggle="pill" data-bs-target="#membresias" type="button">
