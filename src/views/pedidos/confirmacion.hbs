<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card border-0 shadow-sm text-center">
                    <div class="card-body py-5">
                        <div class="mb-4">
                            <div class="bg-success text-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                                <i class="bi bi-check-lg fs-1"></i>
                            </div>
                        </div>
                        <h2 class="fw-bold text-success mb-3">¡Pago Exitoso!</h2>
                        <p class="lead text-muted mb-4">
                            Gracias por tu compra. Tu pedido ha sido procesado exitosamente.
                        </p>
                        
                        <div class="bg-light rounded p-4 mb-4" id="pedido-detalle">
                            <div class="text-center py-3">
                                <div class="spinner-border spinner-border-sm text-primary" role="status">
                                    <span class="visually-hidden">Cargando...</span>
                                </div>
                            </div>
                        </div>
                        
                        <p class="text-muted mb-4">
                            <i class="bi bi-envelope me-2"></i>
                            Te hemos enviado los detalles a tu correo electrónico.
                        </p>
                        
                        <div class="d-flex gap-3 justify-content-center" id="acciones-container">
                            <a href="/" class="btn btn-primary">
                                <i class="bi bi-house me-2"></i>Volver al Inicio
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
async function cargarConfirmacion() {
    // Obtener ID del pedido de la URL
    const urlParams = new URLSearchParams(window.location.search);
    const idPedido = urlParams.get('id');
    
    const container = document.getElementById('pedido-detalle');
    const accionesContainer = document.getElementById('acciones-container');
    
    if (!idPedido) {
        container.innerHTML = '<p class="text-muted">Información del pedido no disponible</p>';
        return;
    }
    
    try {
        const response = await fetch('/pedidos/api/confirmacion/' + idPedido);
        const data = await response.json();
        
        if (data.success && data.data.length > 0) {
            const pedido = data.data[0];
            const total = data.data.reduce((sum, d) => sum + (parseFloat(d.predp) * d.cantdp), 0);
            
            container.innerHTML = `
                <h5 class="mb-3">Detalles del Pedido</h5>
                <div class="d-flex justify-content-between mb-2">
                    <span>N° de Pedido:</span>
                    <strong>#${idPedido}</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Fecha:</span>
                    <strong>${new Date().toLocaleDateString('es-PE')}</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total:</span>
                    <strong class="text-primary">S/ ${total.toFixed(2)}</strong>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Método de Pago:</span>
                    <strong>TARJETA</strong>
                </div>
            `;
            
            // Verificar si hay usuario logueado
            const userResponse = await fetch('/auth/api/me');
            const userData = await userResponse.json();
            
            if (userData.success && userData.user) {
                accionesContainer.innerHTML = `
                    <a href="/" class="btn btn-primary">
                        <i class="bi bi-house me-2"></i>Volver al Inicio
                    </a>
                    <a href="/dashboard" class="btn btn-outline-primary">
                        <i class="bi bi-speedometer2 me-2"></i>Mi Dashboard
                    </a>
                `;
            }
        } else {
            container.innerHTML = '<p class="text-muted">Pedido procesado correctamente</p>';
        }
    } catch (error) {
        console.error('Error al cargar confirmación:', error);
        container.innerHTML = '<p class="text-muted">Pedido procesado correctamente</p>';
    }
}

document.addEventListener('DOMContentLoaded', cargarConfirmacion);
</script>
