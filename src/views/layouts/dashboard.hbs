<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="ModoFit - Dashboard">
    <title>Mi Dashboard - ModoFit</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" href="/img/logo.ico" type="image/x-icon">
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-light" id="sidebar-wrapper">
            <div class="sidebar-heading p-3 border-bottom">
                <a href="/" class="text-decoration-none text-light">
                    <img src="/img/logo.webp" alt="ModoFit" height="35">
                    <span class="ms-2 fw-bold">ModoFit</span>
                </a>
            </div>
            <div class="list-group list-group-flush">
                <a href="/dashboard" class="list-group-item list-group-item-action bg-dark text-light border-0">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a href="/dashboard/membresias" class="list-group-item list-group-item-action bg-dark text-light border-0">
                    <i class="bi bi-card-checklist me-2"></i> Mis Membresías
                </a>
                <a href="/dashboard/pedidos" class="list-group-item list-group-item-action bg-dark text-light border-0">
                    <i class="bi bi-bag me-2"></i> Mis Pedidos
                </a>
                <a href="/dashboard/perfil" class="list-group-item list-group-item-action bg-dark text-light border-0">
                    <i class="bi bi-person me-2"></i> Mi Perfil
                </a>
                <hr class="text-light my-2">
                <a href="/" class="list-group-item list-group-item-action bg-dark text-light border-0">
                    <i class="bi bi-cart-plus me-2"></i> Comprar
                </a>
                <a href="/" class="list-group-item list-group-item-action bg-dark text-light border-0">
                    <i class="bi bi-house me-2"></i> Ir al Inicio
                </a>
                <a href="/auth/logout" class="list-group-item list-group-item-action bg-dark text-danger border-0">
                    <i class="bi bi-box-arrow-right me-2"></i> Cerrar Sesión
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <!-- Top Navigation -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom">
                <div class="container-fluid">
                    <button class="btn" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="navbar-nav ms-auto">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle fs-5"></i>
                                <span class="ms-1" id="navbar-user-name">Mi Cuenta</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/dashboard/perfil"><i class="bi bi-person"></i> Mi Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="/auth/logout"><i class="bi bi-box-arrow-right"></i> Cerrar Sesión</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="container-fluid p-4">
                {{{body}}}
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Custom JS -->
    <script src="/js/dashboard.js"></script>
    <script>
    // Cargar nombre de usuario en navbar
    async function cargarUsuarioNavbar() {
        try {
            const response = await fetch('/auth/api/me');
            const data = await response.json();
            if (data.success && data.user) {
                document.getElementById('navbar-user-name').textContent = data.user.nomcli + ' ' + data.user.apecli;
            }
        } catch (error) {
            console.log('Error al cargar usuario');
        }
    }
    document.addEventListener('DOMContentLoaded', cargarUsuarioNavbar);
    </script>
</body>
</html>
