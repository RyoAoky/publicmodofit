<style>
    /* Estilos específicos para la página de inicio */
    
    /* --- HERO VIDEO SECTION --- */
    .section-video {
        height: 100vh;
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .bg-video {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .bg-video video {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .bg-video::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(180deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.01) 100%);
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        padding: 0 20px;
    }

    .hero-content h2 {
        color: #fff;
        font-size: 50px;
        font-weight: 600;
        margin-bottom: 15px;
    }

    .hero-content h4 {
        color: #fff;
        font-size: 18px;
        font-weight: 300;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .iconos-titulo {
        margin: 20px 0;
        text-align: center;
    }

    .iconos-titulo i {
        color: var(--beige);
        font-size: 4px;
        margin: 0 5px;
    }

    .icono-move {
        position: absolute;
        bottom: 30px;
        left: 50%;
        transform: translateX(-50%);
        color: #fff;
        font-size: 32px;
        animation: bounce 0.9s infinite linear;
        z-index: 2;
    }

    @keyframes bounce {
        0%, 100% { transform: translateX(-50%) translateY(0); }
        50% { transform: translateX(-50%) translateY(-5px); }
    }

    /* --- SECCIÓN NOSOTROS --- */
    .section-nosotros {
        padding: 60px 0;
        background: var(--negro);
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        gap: 40px;
    }

    .col-6 {
        flex: 1;
        min-width: 300px;
    }

    .col-6 img {
        width: 100%;
        height: auto;
    }

    .title-section h3 {
        font-size: 10px;
        color: #fff !important;
        letter-spacing: 4px;
        margin-bottom: 5px;
        text-transform: uppercase;
    }

    .title-section h2 {
        font-size: 32px;
        margin-bottom: 10px;
        line-height: 1.2;
    }

    .btn-page {
        display: inline-block;
        border: 1px solid var(--beige);
        background: var(--beige);
        color: #000;
        padding: 13px 26px;
        font-family: "Poppins", sans-serif;
        font-weight: 800;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: 20px;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-page:hover {
        background: transparent;
        color: var(--beige);
    }

    /* --- SECCIÓN PLANES --- */
    .section-planes {
        padding: 80px 0;
        background: var(--negro);
    }

    .section-planes .title-section {
        text-align: center;
        margin-bottom: 50px;
    }

    .planes-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
    }

    .plan-card {
        background: #0a0a0a;
        border: 1px solid #222;
        padding: 40px 30px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .plan-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--beige);
        transform: scaleX(0);
        transition: transform 0.3s ease;
        transform-origin: left;
    }

    .plan-card:hover {
        border-color: var(--beige);
        transform: translateY(-5px);
    }

    .plan-card:hover::before {
        transform: scaleX(1);
    }

    .plan-card h4 {
        color: #fff;
        font-size: 20px;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .plan-badge {
        display: inline-block;
        background: #1a1a1a;
        border: 1px solid #333;
        padding: 5px 12px;
        font-size: 11px;
        text-transform: uppercase;
        color: var(--gris-texto);
        margin-bottom: 20px;
    }

    .plan-price {
        margin-bottom: 20px;
    }

    .plan-price h2 {
        font-family: "Poppins", sans-serif;
        font-size: 48px;
        color: var(--beige);
        line-height: 1;
    }

    .plan-price h2 span {
        font-size: 20px;
        vertical-align: top;
    }

    .plan-price p {
        font-size: 12px;
        color: var(--gris-texto);
    }

    .plan-features {
        list-style: none;
        margin-bottom: 30px;
    }

    .plan-features li {
        padding: 8px 0;
        color: var(--gris-texto);
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .plan-features li i {
        color: var(--beige);
        font-size: 12px;
    }

    .plan-features li.destacado {
        color: #fff;
        font-weight: 600;
        margin-top: 10px;
    }

    .btn-plan {
        display: block;
        width: 100%;
        text-align: center;
        background: var(--beige);
        color: #000;
        padding: 15px 20px;
        font-family: "Poppins", sans-serif;
        font-weight: 800;
        font-size: 13px;
        text-transform: uppercase;
        border: 1px solid var(--beige);
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-plan:hover {
        background: transparent;
        color: var(--beige);
    }

    .planes-empty {
        text-align: center;
        padding: 60px 20px;
        grid-column: 1 / -1;
    }

    .planes-empty h3 {
        color: var(--gris-texto);
        font-style: italic;
    }

    /* --- SECCIÓN APP --- */
    .section-app {
        padding: 80px 0;
        background: #000;
    }

    .section-app h2 {
        font-size: 36px;
        color: #fff;
        margin-bottom: 20px;
    }

    .section-app h2 span {
        color: var(--beige);
    }

    .section-app p {
        font-size: 15px;
        margin-bottom: 30px;
    }

    .btn-store {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: transparent;
        border: 1px solid #fff;
        color: #fff;
        padding: 12px 20px;
        font-family: "Poppins", sans-serif;
        font-size: 12px;
        font-weight: 600;
        margin-right: 10px;
        margin-bottom: 10px;
        transition: all 0.3s;
        text-decoration: none;
    }

    .btn-store:hover {
        background: #fff;
        color: #000;
    }

    .section-app img {
        max-height: 400px;
        filter: grayscale(100%);
        opacity: 0.75;
    }

    /* --- RESPONSIVE --- */
    @media (max-width: 991px) {
        .hero-content h2 {
            font-size: 36px;
        }

        .hero-content h4 {
            font-size: 14px;
            line-height: 1.4;
        }

        .row {
            flex-direction: column;
        }

        .col-6 {
            width: 100%;
        }

        .title-section h2 {
            font-size: 28px;
        }
    }

    @media (max-width: 767px) {
        .section-video {
            height: 73vh;
        }

        .bg-video video {
            height: 73vh;
        }

        .icono-move {
            bottom: 10px;
        }

        .planes-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

