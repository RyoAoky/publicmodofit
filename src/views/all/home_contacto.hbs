<section class="py-5 bg-dark text-light">
    <div class="container">
        <div class="text-center">
            <h1 class="display-5 fw-bold">Contáctanos</h1>
            <p class="lead">Estamos aquí para ayudarte</p>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6">
                <h3 class="fw-bold mb-4">Envíanos un mensaje</h3>
                <form id="contactForm">
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre completo</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" required>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo electrónico</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefono" class="form-label">Teléfono</label>
                        <input type="tel" class="form-control" id="telefono" name="telefono">
                    </div>
                    <div class="mb-3">
                        <label for="asunto" class="form-label">Asunto</label>
                        <select class="form-select" id="asunto" name="asunto">
                            <option value="informacion">Información general</option>
                            <option value="membresias">Membresías</option>
                            <option value="clases">Clases grupales</option>
                            <option value="entrenamiento">Entrenamiento personal</option>
                            <option value="otro">Otro</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="mensaje" class="form-label">Mensaje</label>
                        <textarea class="form-control" id="mensaje" name="mensaje" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="bi bi-send me-2"></i>Enviar Mensaje
                    </button>
                </form>
            </div>
            <div class="col-lg-6">
                <h3 class="fw-bold mb-4">Información de contacto</h3>
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body p-4">
                        <div class="d-flex mb-4">
                            <div class="bg-primary text-light rounded-circle p-3 me-3">
                                <i class="bi bi-geo-alt fs-4"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Dirección</h6>
                                <p class="text-muted mb-0">Av. Principal 123, Lima, Perú</p>
                            </div>
                        </div>
                        <div class="d-flex mb-4">
                            <div class="bg-success text-light rounded-circle p-3 me-3">
                                <i class="bi bi-telephone fs-4"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Teléfono</h6>
                                <p class="text-muted mb-0">+51 963 061 209</p>
                            </div>
                        </div>
                        <div class="d-flex mb-4">
                            <div class="bg-warning text-dark rounded-circle p-3 me-3">
                                <i class="bi bi-envelope fs-4"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Correo electrónico</h6>
                                <p class="text-muted mb-0">info@modofit.pe</p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="bg-info text-light rounded-circle p-3 me-3">
                                <i class="bi bi-whatsapp fs-4"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">WhatsApp</h6>
                                <p class="text-muted mb-0">+51 963 061 209</p>
                            </div>
                        </div>
                    </div>
                </div>

                <h5 class="fw-bold mb-3">Horarios de atención</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Lunes - Viernes</span>
                        <strong>5:00 AM - 11:00 PM</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Sábados</span>
                        <strong>6:00 AM - 8:00 PM</strong>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Domingos</span>
                        <strong>7:00 AM - 2:00 PM</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
